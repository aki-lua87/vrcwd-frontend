---
import Footer from '../components/Footer.astro';
import FirebaseLogin from '../components/FirebaseLogin.svelte';
---

<html lang="ja">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>サインイン - VRChat Worlds Dashboard</title>
		<style>
			body {
				font-family: -apple-system, BlinkMacSystemFont, "Segoe UI",
					Roboto, sans-serif;
				background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
				margin: 0;
				padding: 0;
				min-height: 100vh;
				display: flex;
				flex-direction: column;
			}

			.main-content {
				flex: 1;
				display: flex;
				flex-direction: column;
				justify-content: center;
				align-items: center;
				padding: 2rem;
				min-height: calc(100vh - 140px);
			}

			.site-title {
				color: white;
				font-size: 2.5rem;
				font-weight: 700;
				margin-bottom: 1rem;
				text-align: center;
				text-shadow: 0 2px 10px rgba(0, 0, 0, 0.3);
			}

			.site-subtitle {
				color: rgba(255, 255, 255, 0.9);
				font-size: 1.1rem;
				margin-bottom: 2rem;
				text-align: center;
				font-weight: 400;
			}

		</style>
	</head>
	<body>
		<div class="main-content">
			<h1 class="site-title">VRChat Worlds Dashboard</h1>
			<p class="site-subtitle">VRChatワールドを効率的に管理・整理</p>
			<FirebaseLogin client:load />
		</div>
		<Footer />

		<script define:vars={{ /* empty for astro */ }}>
			// 既にログイン済みかどうかをローカルストレージでチェック
			document.addEventListener('DOMContentLoaded', () => {
				const firebaseIdToken = localStorage.getItem('firebase_id_token');
				const firebaseUser = localStorage.getItem('firebase_user');
				
				if (firebaseIdToken && firebaseUser) {
					// 既にログイン済みの場合はダッシュボードにリダイレクト
					window.location.href = '/dashboard';
				}
			});
		</script>
	</body>
</html>
