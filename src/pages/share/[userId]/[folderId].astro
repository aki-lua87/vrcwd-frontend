---
import PublicFolderView from "../../../components/PublicFolderView.svelte";
import Footer from "../../../components/Footer.astro";

// This is a server-rendered dynamic route
export const prerender = false;

// Get URL parameters
const { userId, folderId } = Astro.params;

// Validate parameters
if (!userId || !folderId) {
  return new Response("Invalid URL parameters", { status: 400 });
}
---

<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>VRChat Worlds Dashboard</title>

    <!-- OG Tags for better sharing -->
    <meta property="og:title" content="VRChat Worlds" /><meta
      property="og:description"
      content={`VRChatワールドコレクションを見る`}
    /><meta property="og:type" content="website" /><meta
      property="og:url"
      content={Astro.url.href}
    /><meta name="twitter:card" content="summary" /></head
  >

  <!-- Twitter Card -->
  フォルダ
  <meta name="twitter:title" content="VRChat Worlds" />
  <meta
    name="twitter:description"
    content={`VRChatワールドコレクションを見る`}
  />

  <style>
    body {
      margin: 0;
      padding: 0;
      min-height: 100vh;
      display: flex;
      flex-direction: column;
    }

    #root {
      flex: 1;
      display: flex;
      flex-direction: column;
    }
  </style>

  <body>
    <div id="root">
      <PublicFolderView userId={userId} folderId={folderId} client:load />
    </div>
    <Footer />
  </body>


</html>
